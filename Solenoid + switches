int Solenoid0 = 1;
int Solenoid1 = 2;
int Redlight = 4;
int Greenlight = 5;
int Key = 6;
int Toggle = 7;
int Solenoid = 3;

int count = 1;

// the setup routine runs once when you press reset:
void setup() {
  
  pinMode(Solenoid0, OUTPUT);
  pinMode(Solenoid1, OUTPUT);
  pinMode(Redlight, OUTPUT);
  pinMode(Greenlight, OUTPUT);
  pinMode(Key, INPUT);
  pinMode(Toggle, INPUT);
  pinMode(Solenoid, INPUT);
  
  
}

// the loop routine runs over and over again forever:
void loop() {

  if (digitalRead(Key) == HIGH)
  {
    digitalWrite(Greenlight, HIGH);
  }
  else digitalWrite(Greenlight, LOW);

  
  if (digitalRead(Toggle) == HIGH && digitalRead(Key) == HIGH)
  {
    digitalWrite(Greenlight, LOW);
    digitalWrite(Redlight, HIGH);
  }
  else digitalWrite(Redlight, LOW);

  if (digitalRead(Solenoid) == HIGH && count == 1)
  {
    digitalWrite(Solenoid0, HIGH);
    delay(25);
    count += 1;
  }
  else digitalWrite(Solenoid0, LOW);
   
  if(digitalRead(Solenoid) == HIGH && count == 2)
  {
    digitalWrite(Solenoid1, HIGH);
    delay(25);
    count -= 1;
  }
  else digitalWrite(Solenoid1, LOW);
}
